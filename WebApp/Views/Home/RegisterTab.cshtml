
@{
    ViewBag.Title = "RegisterTab";
}

<form>
    <h3>Register</h3>
    <div class="row">
        <div class="form-group col-lg-4">
            <input type="text" id="username" class="input-lg form-control" placeholder="Username..." />
        </div>
        <div class="form-group col-sm-4">
            <select class="input-lg form-control">
                <option value="Normal">Normal Customer</option>
                <option value="Student">Student</option>
                <option value="Senior">Senior</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <input type="password" id="password" class="input-lg form-control" placeholder="Password..." />
    </div>
    <div class="form-group">
        <input type="password" id="confirmPassword" class="input-lg form-control" placeholder="Confirm Password..." />
    </div>
    <div class="row">
        <div class="form-group col-lg-4">
            <input type="text" id="fName" class="input-lg form-control" placeholder="First Name..." />
        </div>
        <div class="form-group col-lg-4">
            <input type="file" id="image" class="input-lg" style="padding: 1px 10px;"/>
        </div>
    </div>
    <div class="form-group">
        <input type="text" id="lName" class="input-lg form-control" placeholder="Last Name..." />
    </div>
    <div class="form-group">
        <input type="date" id="dateBirth" class="input-lg form-control" style="padding: 2px 10px;" />
    </div>
    <div class="form-group">
        <input type="text" id="adress" class="input-lg form-control" placeholder="Your home adress..." />
    </div>
    <div class="form-group">
        <input type="submit" id="Register" class="input-lg form-control" value="Register" />
    </div>
</form>


